<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape
                    android:shape="oval"
                    >
                    <size
                        android:height="45dp"
                        android:width="45dp"/>

                    <solid
                        android:color="@color/cyan_focused"/>
                </shape>
            </item>

            <item
                android:drawable="@drawable/ic_social_share"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"
                android:bottom="5dp"/>


        </layer-list>
    </item>

    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape
                    android:shape="oval"
                    >
                    <size
                        android:height="45dp"
                        android:width="45dp"/>

                    <solid
                        android:color="@color/cyan_focused"/>
                </shape>
            </item>

            <item
                android:drawable="@drawable/ic_social_share"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"
                android:bottom="5dp"/>


        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape
                    android:shape="oval"
                    >
                    <size
                        android:height="45dp"
                        android:width="45dp"/>

                    <solid
                        android:color="@color/cyan_primary"/>
                </shape>
            </item>

            <item
                android:drawable="@drawable/ic_social_share"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"
                android:bottom="5dp"/>


        </layer-list>
    </item>
</selector>